%h1 Listing menu_items

%p= link_to 'New Menu item', new_menu_item_path

= search_form_for @q do |f|
  = f.select :category_id_eq, Category.all.map{|c| [c.name, c.id]}, include_blank: true

%table.table.table-bordered.table-striped
  %tr
    %th Category
    %th= lbl MenuItem, :name
    %th= lbl MenuItem, :keyword_list
    %th
    %th
    %th

  - @menu_items.each do |menu_item|
    %tr
      %td= menu_item.category.try(:name)
      %td= menu_item.name
      %td= menu_item.keyword_list
      %td= link_to 'Show', menu_item
      %td= link_to 'Edit', edit_menu_item_path(menu_item)
      %td= link_to 'Destroy', menu_item, :method => :delete, :data => { :confirm => 'Are you sure?' }
